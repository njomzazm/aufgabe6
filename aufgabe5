public class Klausur5 {
    public static void main (String[] args ) {
        int summe = 0;
        int anzahl = 0;
        double durchschnitt = 0;


        while (true) {
            int note = Integer.parseInt(JOptionPane.showInputDialog("Geben Sie eine Note ein."));
            if (note == 0) {
                if (anzahl >= 2) {
                    durchschnitt = summe / anzahl;
                    System.out.println(durchschnitt);
                    System.exit(0);
                } else {
                    System.out.println("Zu wenig Noteneingaben!");
                    return;
                }
            } else if (note != 0)
                if (note > 0 && note <= 6) {
                    summe = summe + note;
                    anzahl = anzahl + 1;
                } else {
                    System.out.println("Nur Ziffern von 1-6!");
                    System.exit(0);
                }
        }
    }

}

