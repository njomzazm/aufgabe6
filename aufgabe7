public class Haus2 {
    private String strasse;
    private Familie[] bewohner;
    private int hausnummer;

    public Haus2(int hausnummer) {
        this.hausnummer = hausnummer;
        this.strasse = "Waldstraße";
        this.bewohner = new Familie[6];
    }
     void einzug(String familienname, String[] vornamen, int ansprechpatner, int etage) {
        for (int i= 0; i < bewohner.length; i++) {
            if (bewohner[etage] == null) {
                bewohner[etage] = new Familie(familienname, vornamen.length);
                break;
            }
        }
    }

    public Familie[] getBewohner() {
        return bewohner;
    }
}

    public Sparvertrag[] getVertragArray() {
        return vertragArray;
    }
}


public class Familie {
    private String familienname;
    private String[] vornamen;
    private int ansprechpartner;

    public Familie(String familienname, int anzahl) {
        this.familienname = familienname;
        this.vornamen = new String[anzahl];
    }

    public String[] getVornamen() {
        return vornamen;
    }

    void setVornamen(String[] vornamen) {
        this.vornamen = vornamen;
    }

    public String getFamilienname() {
        return familienname;
    }

    void setFamilienname(String familienname) {
        this.familienname = familienname;
    }

    public int getAnsprechpartner() {
        return ansprechpartner;
    }

    void setAnsprechpartner(int ansprechpartner) {
        this.ansprechpartner = ansprechpartner;
    }
}

//Applikation
public class Klausur2Appli {
    public static void main (String[] args) {
        Haus2 haus = new Haus2(5);

        String[] vornamenWang = new String[]{"Jasmin", "Kevin", "Max", "Sarah"};
        haus.einzug("Wang" ,vornamenWang, 4 , 0);

        String[] vornamenWeckeßer = new String[]{"Leonie", "Rafael", "Annika", "Martin"};
        haus.einzug("Weckeßer", vornamenWeckeßer, 3, 1 );

        ausgabeAnsprechpatner(haus,4);

    }
    static public void ausgabeAnsprechpatner(Haus2 haus, int ansprechpatner){
        Familie[] array = haus.getBewohner();
        String[] vornamen;

        for (int i = 0; i < array.length; i++) {
            vornamen = array[i].getVornamen();
            if (array[i] != null) {
                System.out.println("Ansprechpatner aus Etage " + i + ": " + vornamen[ansprechpatner]);
            }
        }

    }
}

