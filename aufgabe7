public class KBankSparvertraege {
    private String name;
    private Sparvertrag[] vertragArray;

    public KBankSparvertraege(String name) {
        this.name = name;
        vertragArray = new Sparvertrag[523];
    }

    public void vertragHinzuf√ºgen(String sparer, double guthaben, String art) {
        for (int i = 0; i < vertragArray.length; i++) {
            if (vertragArray[i] == null) {
                if (art.equals("NormSparVertrag"))
                    vertragArray[i] = new NormSparvertrag(sparer, art, guthaben);
                else if (art.equals("VertragPlus"))
                    vertragArray[i] = new VertragPlus(sparer, art, guthaben);
            } else
                System.out.println("Das Array ist voll!");
        }
    }

    public Sparvertrag[] getVertragArray() {
        return vertragArray;
    }
}
